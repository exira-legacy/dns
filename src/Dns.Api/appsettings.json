{
  "ConnectionStrings": {
    "Events": "Server=(localdb)\\mssqllocaldb;Database=EFProviders.InMemory.Dns;Trusted_Connection=True;",
    "ApiProjections": "Server=(localdb)\\mssqllocaldb;Database=EFProviders.InMemory.Dns;Trusted_Connection=True;"
  },

  "DataDog": {
    "Enabled": false,
    "Debug": false,
    "ServiceName": "dns-api"
  },

  "Cors": [
    "http://localhost:3000",
    "http://localhost:5000"
  ],

  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning",
      "Dns": "Debug",
      "Be.Vlaanderen.Basisregisters": "Information",
      "Be.Vlaanderen.Basisregisters.DataDog.Tracing": "Information",
      "Be.Vlaanderen.Basisregisters.AspNetCore.Mvc.Logging": "Information",
      "System": "Warning",
      "Microsoft": "Warning"
    }
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Dns": "Verbose",
        "Be.Vlaanderen.Basisregisters": "Information",
        "Be.Vlaanderen.Basisregisters.DataDog.Tracing": "Information",
        "Be.Vlaanderen.Basisregisters.AspNetCore.Mvc.Logging": "Error",
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Properties": {
      "Application": "Dns - API"
    }
  }
}
